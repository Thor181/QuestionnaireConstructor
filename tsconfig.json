{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [ "./*", "./**/*" ],
  "exclude": [ "node_modules", "./my.js", "./build/main.js" ]
}