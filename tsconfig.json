{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true

  },
  "ts-node": { "compilerOptions": { "module": "CommonJS" } },
  "include": [ "./wwwroot/js/*.js", "./wwwroot/js/*.ts", "./wwwroot/js/**/*.js", "./wwwroot/js/**/*.ts" ],
  "exclude": []
}