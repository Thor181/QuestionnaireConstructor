{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "bundler",
    "allowJs":  true
  },
  "include": [ "./*", "./**/*" ],
  "exclude": ["node_modules", "./my.js"]
}